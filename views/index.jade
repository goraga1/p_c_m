extends layout

block content
	h1= title
	p Welcome to #{title}

	// Wrapper
	#wrapper

		// USER INFO
		#userInfo
			h2 User Info
			p
				strong Name:
				|  <span id='userInfoName'></span>
				br
				strong Age:
				|  <span id='userInfoAge'></span>
				br
				strong Gender:
				|  <span id='userInfoGender'></span>
				br
				strong Location:
				|<span id='userInfoLocation'></span>
		// /USER INFO
		
		// USER LIST
		h2 User List
		#userList
			table
				thead
					th Name
					th Email
					th Delete?
					tbody
		// /USER LIST

		// ADD USER
		h2 Add User
		#addUser
			fieldset
				input#inputUserEmail(type='text', placeholder='Email')
				input#inputUserPassword(type='text', placeholder='Password')
				br
				input#inputUserFirstName(type='text', placeholder='First Name')
				input#inputUserLastName(type='text', placeholder='Last Name')
				br
				button#btnAddUser Add User
		// /ADD USER

	// /WRAPPER
	

